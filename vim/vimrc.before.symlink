" change the mapleader from \ to ,
let mapleader=","

" Disable Buffergator because it interferes with the
" CTRL-P leader-t when using vim from terminal
call janus#disable_plugin('buffergator')

nmap <silent> <leader>t :CtrlP<CR>

" Exit insert mode with 'hh'
" From http://vim.wikia.com/wiki/Avoid_the_escape_key
inoremap hh <Esc>
